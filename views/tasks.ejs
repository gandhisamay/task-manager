<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="../public/style.css" type="text/css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Task Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/new">New Task</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex flex-column align-items-center">
        <h1 class="display-5 text-center mb-4">Tasks</h1>
        <% if(tasks.length !==0){ %>
            <form action="/new" method="GET" class="d-lg-none my-4">
                <button class="btn btn-primary mx-auto">Add a task</button>
            </form>
            <% } %>
    </div>
    <div class="container-fluid tasks">
        <div class="row justify-content-evenly">
            <% console.log(tasks) %>
                <% if(tasks.length !==0) {%>
                    <% for(let task of tasks){%>
                        <div
                            class="card col-12 col-sm-3 m-2 d-flex justify-content-center flex-column align-items-center">
                            <h5 class="card-title text-center mt-2">
                                <%= task.title %>
                            </h5>
                            <div class="card-body">
                                <%= task.details %>
                            </div>
                            <div class="d-flex">
                                <form method="POST" action=<%=`/delete/${task._id}?_method=DELETE` %>
                                    class="m-2">
                                    <button class="btn btn-primary" id="delete"><i
                                            class="fas fa-trash-alt"></i></button>
                                </form>
                                <form method="GET" action=<%=`/edit/${task._id}` %> class="m-2">
                                    <button class="btn btn-primary" id="edit"><i class="fas fa-pen"></i></button>
                                </form>
                            </div>
                        </div>
                        <% } %>
                            <% }else {%>
                                <div class="mt-5">
                                    <p class="lead text-center">You don't have any tasks left, enjoy!</p>
                                    <form action="/new" method="GET" class="d-flex">
                                        <button class="btn btn-primary mx-auto">Add a task</button>
                                    </form>
                                </div>
                                <% } %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
            crossorigin="anonymous"></script>
</body>

</html>